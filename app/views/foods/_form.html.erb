<%= form_for(@food) do |f| %>
  <% if @food.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@food.errors.count, "error") %> prohibited this food from being saved:</h2>

      <ul>
      <% @food.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <section class="model-display">
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :company %>
      <%= f.text_field :company %>
    </div>
    <div class="field">
      <%= f.label :food_group %>
      <%= select_tag("food[food_group_id]", options_from_collection_for_select(FoodGroup.all, 'id', 'name')) %>
    </div>
    <div class="field">
      <%= f.label :amount %>
      <%= f.text_field :amount, :class => "number" %>
      <%= select_tag("food[unit_id]", options_from_collection_for_select(Unit.all, 'id', 'abbv')) %>
    </div>
    <div class="field">
      <%= f.label :calories %>
      <%= f.text_field :calories, :class => "number" %>
    </div>
    <div class="field">
      <%= f.label :fat_calories %>
      <%= f.text_field :fat_calories, :class => "number" %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  </section>
<% end %>
